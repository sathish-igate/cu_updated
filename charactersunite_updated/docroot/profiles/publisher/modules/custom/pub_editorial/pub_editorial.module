/**
 * Helper that recursively unhides a menu tree branch.
 */
function _pub_editorial_unhide_menu_tree_branch(&$branch) {
  $blacklist = array(
    'admin/content/node',
    'admin/content/dynamic-queue/list',
    'admin/content/file/list',
    'admin/content/queues/list',
    'admin/workbench/content',
    'admin/people/people',
    'admin/people/permissions/list',
  );
  foreach ($branch as $sub_key => &$sub_branch) {
    if (!empty($sub_branch['link']['link_path']) && !in_array($sub_branch['link']['link_path'], $blacklist)) {
      $sub_branch['link']['hidden'] = 0;
    }
    if (!empty($sub_branch['below'])) {
      _pub_editorial_unhide_menu_tree_branch($sub_branch['below']);
    }
  }
}

/**
 * Implements hook_navbar_menu_tree_alter().
 */
function pub_editorial_navbar_menu_tree_alter(&$tree) {
  // Unhide all links under the "Content", "My Workbench", and "People" menus.
  $menu_paths_to_unhide = array(
    'admin/content',  // Content
    'admin/workbench',  // My Workbench
    'admin/people',  // People
  );
  foreach ($tree as $key => &$branch) {
    if (!empty($branch['link']['link_path']) && in_array($branch['link']['link_path'], $menu_paths_to_unhide) && !empty($branch['below'])) {
      _pub_editorial_unhide_menu_tree_branch($branch['below']);
    }
  }
}
